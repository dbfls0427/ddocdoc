<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ddocdoc.mapper.HospitalMapper">
	<cache />
	
	<!-- 병원 정보 등록 -->
	<insert id="hospitalInsert" parameterType="HospitalVO">
		insert into dd_hospital values('H00' || hospital_seq.nextval, #{hos_name}, #{hos_tel},
			#{hos_addr}, #{hos_time}, #{hos_info}, 0, #{hos_type})
	</insert>
	
	<!-- 병원 정보 상세 -->
	<select id="hospitalDetail" resultType="HospitalVO" parameterType="String">
		select * from dd_hospital 
		where hos_num = #{hos_num}
	</select>
	
	<!-- 병원 정보 리스트 -->
	<select id="hospitalList" resultType="HospitalVO">
		select * from dd_hospital
	</select>
	
	
	<!-- 병원 정보 수정 -->
	<update id="hospitalUpdate" parameterType="HospitalVO">
		update dd_hospital 
		set  hos_name = #{hos_name}, hos_tel = #{hos_tel}, hos_addr = #{hos_addr}, hos_time = #{hos_time}, hos_info = #{hos_info}, hos_type = #{hos_type}
		where hos_num = #{hos_num}
	</update>
	
	<!-- 병원 정보 삭제 -->
	<delete id="hospitalDelete" parameterType="String">
		delete from dd_hospital 
		where hos_num = #{hos_num}
	</delete>
	
</mapper>