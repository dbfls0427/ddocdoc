<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ddocdoc.mapper.PharmacyMapper">
	<cache />
	
	<!-- 약국  등록 -->
	<insert id="pharmacyInsert" parameterType="PharmacyVO">
		insert into dd_pharmacy values('P00' || pharmacy_seq.nextval, #{phar_name}, #{phar_tel},
			#{phar_addr}, #{phar_time}, #{phar_info}, 0)
	</insert>
	
	<!-- 약국  상세 -->
	<select id="pharmacyDetail" resultType="PharmacyVO" parameterType="String">
		select * from dd_pharmacy 
		where phar_num = #{phar_num}
	</select>
	
	<!-- 약국  리스트 -->
	<select id="pharmacyList" resultType="PharmacyVO">
		select * from dd_pharmacy
	</select>
	
	
	<!-- 약국 수정 -->
	<update id="pharmacyUpdate" parameterType="PharmacyVO">
		update dd_pharmacy 
		set  phar_name = #{phar_name}, phar_tel = #{phar_tel}, phar_addr = #{phar_addr}, phar_time = #{phar_time}, phar_info = #{phar_info}
		where phar_num = #{phar_num}
	</update>
	
	<!-- 약국 삭제 -->
	<delete id="pharmacyDelete" parameterType="String">
		delete from dd_pharmacy 
		where phar_num = #{phar_num}
	</delete>
	
</mapper>