<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<typeAliases>
		<typeAlias type="ddocdoc.vo.CustomerVO" alias="Customer"/>
		<typeAlias type="ddocdoc.vo.LoginVO" alias="Login"/>
		<typeAlias type="ddocdoc.vo.HospitalVO" alias="HospitalVO"/>
		<typeAlias type="ddocdoc.vo.ChildHeightVO" alias="ChildHeightVO"/>
		<typeAlias type="ddocdoc.vo.HospitalResVO" alias="HospitalResVO"/>

	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="JNDI">
				<property name="data_source" value="java:comp/env/jdbc/oracle"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
				<property name="username" value="project"/>
				<property name="password" value="1234"/>
			</dataSource>
		</environment>		
	</environments>
	
	<mappers>
		<mapper resource="ddocdoc/mapper/Customer.xml"/>
		<mapper resource="ddocdoc/mapper/ChildHeight.xml"/>

		
      <mapper resource="ddocdoc/mapper/Hospital.xml"/>

	</mappers>
	
</configuration>
